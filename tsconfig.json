{
    "compilerOptions": {
        "outDir": "lib",
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "strict": true,
        "noEmitOnError": true,
        "pretty": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "declaration": true
    },
    "include": ["./src"],
    "exclude": ["./node_modules", "**/*.spec.ts"]
}
